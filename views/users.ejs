<%- include('../views/header', {user: user}); %>

<div style="margin-top: 50px; color: white;">
    <center>
        <h1>All Users</h1>
        <div>
            <table class="table table-dark table-borderless" style="width: 70%">
                <thead>
                    <tr>
                        <td>Username</td>
                        <td>Joined On</td>
                        <td>Last Seen</td>
                        <td>Actions</td>
                    </tr>
                </thead>
              <tbody>
                    <% for(var i = 0; i < users.length; i++) {%>
                        <tr>
                        <td>
                            <% let _user = users[i]%>
                            <%if(_user.permissionLevel >= 2) {%><img style="height:13px; margin-right: 4px; margin-top: -2px;" src="/img/premium.png" /><%}%><%if(_user.permissionLevel == 100) {%><img style="height:13px; margin-right: 4px; margin-top: -2px;" src="/img/admin.png" /><%}%><span <%if(_user.permissionLevel == 2) {%>style="color: #2c45ff"<%}%><%if(_user.permissionLevel == 100) {%>style="color: red"<%}%>><%= _user.username %></span>
                        </td>
                        <td>
                            <%= formatDate(new Date(_user.joinedAt))%>
                        </td>
                        <td>
                            <%= formatDate(new Date(_user.lastSeen))%>
                        </td>
                        <td></td>
                    </tr>
                    <%}%>
              </tbody>
            </table>
          </div>
    </center>
</div>

</body></html>